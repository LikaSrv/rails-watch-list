<div class="index-bg text-white d-flex flex-column justify-content-center align-items-center">
  <h1>Save any kind of movies</h1>
</div>
<div class="d-flex justify-content-end" style="margin: 50px 50px 0 0">
  <%= link_to "Add a movie list",  new_list_path, class: "btn btn-success"%>
</div>
<div class="d-flex flex-column justify-content-center align-items-center" style="margin: 0px 100px;">
  <h2>My Lists</h2>
  <div class="m-4 d-flex flex-row">
    <% if @lists.empty?%>
      <p>You don't have any list. Let's create one !</p>
    <% else %>
      <%@lists.each do |list|%>
        <a href="<%=list_path(list)%>" class="text-decoration-none">
          <div class="card-category"
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
            <%=list.name%>
          </div>
        </a>
      <%end%>
    <% end%>
  </div>
</div>
