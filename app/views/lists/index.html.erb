<div class="index-bg text-white d-flex flex-column justify-content-center align-items-center">
  <h1>Save any kind of movies</h1>
  <p>Classic</p>
</div>
<div class="d-flex justify-content-end" style="margin: 50px 50px 0 0">
  <%= link_to "Add a movie list",  new_list_path, class: "btn btn-success"%>
</div>
<div class="d-flex flex-column justify-content-center align-items-center" style="margin: 0px 100px;">
  <h2>My Lists</h2>
  <div class="m-4 row">
    <%@lists.each do |list|%>
      <div class="col-2 list-card shadow border rounded-4 d-flex justify-content-center align-items-center m-4">
        <%=cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
        <%=link_to list.name, list_path(list), class: "text-light text-decoration-none"%>
      </div>
    <%end%>
  </div>
</div>
